<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
   	android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape" 
    android:padding="0dp" >
 	
	<ImageView
      android:id="@+id/padder1_custom_alert_dialog"
      android:layout_width="fill_parent"
      android:layout_height="15dp" />
    
	<TextView
          android:id="@+id/custom_alert_dialog_textview_title"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_below="@+id/padder1_custom_alert_dialog"
          android:layout_centerHorizontal="true"
          android:layout_marginRight="10dp"
          android:layout_marginTop="10dp"
          android:gravity="center"
          android:textColor="#FFF"
          android:textSize="20dip"
          android:textStyle="bold" />
	
    <ImageView
        android:id="@+id/custom_alert_dialog_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_below="@+id/custom_alert_dialog_textview_title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="3dp" />
 
    <TextView
        android:id="@+id/custom_alert_dialog_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_alert_dialog_textview_title"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/custom_alert_dialog_image"
        android:gravity="center_vertical"
        android:textColor="#FFF"
        android:textSize="20dip" />
 
      <Button
          android:id="@+id/custom_alert_dialog_cancel"
          android:layout_width="80dp"
          android:layout_height="47dp"
          android:layout_alignParentLeft="true"
          android:layout_below="@+id/custom_alert_dialog_image"
          android:layout_marginBottom="4dp"
          android:layout_marginLeft="7dp"
          android:layout_marginTop="6dp"
          android:text="@+string/dialog_cancel"
          android:textColor="#FFFFFF"
          android:textSize="10dip" />
      
      <Button
          android:id="@+id/custom_alert_dialog_ok"
          android:layout_width="100dp"
          android:layout_height="53dp"
          android:layout_alignParentRight="true"
          android:layout_below="@+id/custom_alert_dialog_image"
          android:layout_marginBottom="6dp"
          android:layout_marginRight="10dp"
          android:layout_marginTop="3dp"
          android:text="@+string/dialog_ok"
          android:textColor="#FFFFFF"
          android:textSize="10dip" />
 
</RelativeLayout>
