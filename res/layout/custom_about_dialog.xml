<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="310dp"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:background="@drawable/shape"
	android:padding="0dp" >

	<ImageView
		android:id="@+id/padder1_custom_dialog"
		android:layout_width="wrap_content"
		android:layout_height="15dp"
		android:contentDescription="@string/content_description_padder" />

	<TextView
		android:id="@+id/custom_about_dialog_textview_title"
		android:layout_width="300dp"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_below="@+id/padder1_custom_dialog"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="10dp"
		android:gravity="center"
		android:textColor="@color/White"
		android:textSize="20sp"
		android:textStyle="bold" />

	<TextView
		android:id="@+id/custom_about_dialog_textview"
		android:layout_width="300dp"
		android:layout_height="wrap_content"
		android:layout_below="@+id/custom_about_dialog_textview_title"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="20dp"
		android:gravity="center"
		android:textColor="@color/White"
		android:textSize="16sp" />

	<Button
		android:id="@+id/custom_about_dialog_ok"
		android:layout_width="53dp"
		android:layout_height="45dp"
		android:layout_below="@+id/custom_about_dialog_textview"
		android:layout_centerHorizontal="true"
		android:text="@string/ok"
		android:textColor="@color/White"
		android:textSize="10sp" />

</RelativeLayout>