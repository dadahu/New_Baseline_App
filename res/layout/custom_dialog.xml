<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="#000000" >
 	
     <TextView
      android:id="@+id/padder1_custom_dialog"
      android:layout_width="match_parent"
      android:layout_height="15dp" />
    
    <ImageView
        android:id="@+id/custom_dialog_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp" />
 
    <TextView
        android:id="@+id/custom_dialog_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFF" 
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/custom_dialog_image"/>/>
 
     <Button
        android:id="@+id/custom_dialog_ok"
        android:layout_width="80px"
        android:layout_height="wrap_content"
        android:text=" Ok "
        android:layout_marginTop="3dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="3dp"
        android:layout_below="@+id/custom_dialog_image"
        />
 
</RelativeLayout>