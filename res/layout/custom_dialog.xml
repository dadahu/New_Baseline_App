<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    style="@style/custom_dialog" >
 	
     <ImageView
      android:id="@+id/padder1_custom_dialog"
      android:layout_width="match_parent"
      android:layout_height="15dp" />
    
    <ImageView
        android:id="@+id/custom_dialog_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="2dp" />
 
    <TextView
        android:id="@+id/custom_dialog_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/custom_dialog_image"
        android:gravity="center"
        android:textColor="#FFF"
        android:textSize="20dip" />
  
     <Button
         android:id="@+id/custom_dialog_update"
         android:layout_width="140dp"
         android:layout_height="58dp"
         android:layout_alignParentLeft="false"
         android:layout_alignParentRight="true"
         android:layout_below="@+id/custom_dialog_image"
         android:layout_margin="8dp"
         android:layout_marginBottom="3dp"
         android:layout_marginTop="3dp"
         android:text="@+string/update"
         android:textColor="#FFFFFF"
         android:textSize="12.5dip"
         android:visibility="invisible" />
    
     <Button
         android:id="@+id/custom_dialog_ok"
         android:layout_width="53dp"
         android:layout_height="53dp"
         android:layout_alignParentRight="true"
         android:layout_below="@+id/custom_dialog_image"
         android:layout_marginBottom="3dp"
         android:layout_marginRight="8dp"
         android:layout_marginTop="3dp"
         android:text="@+string/ok"
         android:textColor="#FFFFFF"
         android:textSize="10dip" />

     <Button
         android:id="@+id/custom_dialog_ok2"
         android:layout_width="53dp"
         android:layout_height="53dp"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/custom_dialog_image"
         android:layout_marginBottom="2dp"
         android:layout_marginLeft="8dp"
         android:layout_marginTop="7dp"
         android:text="@+string/ok"
         android:textColor="#FFFFFF"
         android:textSize="10dip"
         android:visibility="invisible" />
</RelativeLayout>