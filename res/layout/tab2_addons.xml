<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/scroller"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:fillViewport="true"
	android:scrollbarAlwaysDrawVerticalTrack="false"
	android:scrollbars="none" >

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/background"
		android:orientation="vertical"
		android:scrollbarAlwaysDrawVerticalTrack="false"
		android:scrollbars="none" >

		<TextView
			android:id="@+id/padder1_tab1"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center" />

		<TableLayout
			android:layout_width="300dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center" >

			<TextView
				android:id="@+id/TextView01"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="@string/launchers" />

			<TextView
				android:id="@+id/TextView06"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" />

			<TableRow
				android:id="@+id/tablerow_adw"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal" >

				<Button
					android:id="@+id/button_install_adw"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/button_normal"
					android:gravity="center"
					android:onClick="myClickHandler"
					android:paddingBottom="10dp"
					android:text="@string/install_adw"
					android:textColor="@color/White"
					android:textStyle="bold" />

				<ImageView
					android:id="@+id/imageview_adw"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:contentDescription="@string/content_description_launcher_image"
					android:paddingBottom="10dp"
					android:paddingRight="35dp"
					android:src="@drawable/adw" />
			</TableRow>

			<TableRow
				android:id="@+id/tablerow_golauncher"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal" >

				<Button
					android:id="@+id/button_install_golauncher"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/button_normal"
					android:gravity="center"
					android:onClick="myClickHandler"
					android:paddingBottom="10dp"
					android:text="@string/install_golauncher"
					android:textColor="@color/White"
					android:textStyle="bold" />

				<ImageView
					android:id="@+id/imageview_golauncher"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:contentDescription="@string/content_description_launcher_image"
					android:paddingBottom="10dp"
					android:paddingRight="35dp"
					android:src="@drawable/golauncher" />
			</TableRow>

			<TableRow
				android:id="@+id/tablerow_Nova"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal" >

				<Button
					android:id="@+id/button_install_nova"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/button_normal"
					android:gravity="center"
					android:onClick="myClickHandler"
					android:paddingBottom="10dp"
					android:text="@string/install_nova"
					android:textColor="@color/White"
					android:textStyle="bold" />

				<ImageView
					android:id="@+id/imageview_nova"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:contentDescription="@string/content_description_launcher_image"
					android:paddingBottom="10dp"
					android:paddingRight="35dp"
					android:src="@drawable/nova" />
			</TableRow>

			<TextView
				android:id="@+id/TextView03"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" />

			<TextView
				android:id="@+id/TextView05"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="@string/themes" />

			<TextView
				android:id="@+id/TextView02"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" />

			<TableRow
				android:id="@+id/tablerow_ssdred"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal" >

				<Button
					android:id="@+id/button_install_ssdred"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/button_normal"
					android:gravity="center"
					android:onClick="myClickHandler"
					android:paddingBottom="10dp"
					android:text="@string/install_ssdred"
					android:textColor="@color/White"
					android:textStyle="bold" />

				<ImageView
					android:id="@+id/imageview_ssdred"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:contentDescription="@string/content_description_theme_image"
					android:paddingBottom="10dp"
					android:paddingRight="25dp"
					android:src="@drawable/ssdred" />
			</TableRow>

			<TableRow
				android:id="@+id/tablerow_popstyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal" >

				<Button
					android:id="@+id/button_install_popstyle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/button_normal"
					android:gravity="center"
					android:onClick="myClickHandler"
					android:paddingBottom="10dp"
					android:text="@string/install_popstyle"
					android:textColor="@color/White"
					android:textStyle="bold" />

				<ImageView
					android:id="@+id/imageview_popstyle"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:contentDescription="@string/content_description_theme_image"
					android:paddingBottom="10dp"
					android:paddingRight="25dp"
					android:src="@drawable/popstyle" />
			</TableRow>

			<TableRow
				android:id="@+id/tablerow_redics"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal" >

				<Button
					android:id="@+id/button_install_redics"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/button_normal"
					android:gravity="center"
					android:onClick="myClickHandler"
					android:paddingBottom="10dp"
					android:text="@string/install_redics"
					android:textColor="@color/White"
					android:textStyle="bold" />

				<ImageView
					android:id="@+id/imageview_redics"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:contentDescription="@string/content_description_theme_image"
					android:paddingBottom="10dp"
					android:paddingRight="25dp"
					android:src="@drawable/redics" />
			</TableRow>
		</TableLayout>
	</LinearLayout>

</ScrollView>